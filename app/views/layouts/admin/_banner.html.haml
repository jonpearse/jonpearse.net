:ruby
  @page_title  ||= ''
  @breadcrumb  ||= []

%header.page__banner.banner
  %h1.banner__title= @page_title

  %nav.banner__breadcrumb.breadcrumb
    %ul.breadcrumb__list
      - @breadcrumb.each do |crumb|
        %li.breadcrumb__item= render partial: 'layouts/admin/crumb', locals: { crumb: crumb, unlink: ( @breadcrumb.last === crumb )}
