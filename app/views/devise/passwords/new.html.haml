- @page_title = title_t( resource, :reset_password )
- @breadcrumb = [{ title: breadcrumb_t( resource, :log_in ), url: session_path( resource_name ) }, breadcrumb_t( resource, :reset_password )]


= form_with model: resource, url: password_path( resource_name ), html: { method: :post, class: 'form form--dialog' } do |f|
  %ol.form__fields
    %li.form__field
      = f.label :email, class: 'form__label' do
        = label_text_for( resource, :email )
        %abbr{ title: prompt_t( f.object, :required_field ), class: 'form__required' } *
      = f.email_field :email, required: true, autofocus: true, class: 'form__input'
      %small.form__hint= link_to prompt_t( resource, :remembered_password ), session_path( resource_name )

  .form__buttons
    %button.btn.btn--large.btn--primary{ type: :submit }= prompt_t( resource, :reset_password )
